<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd" >

<!-- 配置对应的接口 -->
<mapper  namespace="com.rimi.dao.UserDao">
 	
 	<resultMap type="UserBean" id="rm">
 		<id property="userId"   column="id" />
 		<result property="userName" column="name"/>
 		<result property="userPs"  column="ps"/>
 	</resultMap>
 
 	<select id="getUserById"  parameterType="int" resultMap="rm">
		select  *  from  userbean  where  id  =  #{userId}
 	</select>
 	<select id="login"  resultMap="rm">
		select  *  from  userbean  where  name = #{arg0} and ps = #{arg1}
 	</select>
 	<insert id="register" parameterType="UserBean">
 		insert into userbean values(#{userId},#{userName},#{userPs})
 	</insert>
</mapper>
